# Vulnerable Banana Environment Variables
# Copy to .env.secret and fill in your values

# =============================================================================
# REQUIRED - Google AI
# =============================================================================

# Gemini API key from Google AI Studio (https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# REQUIRED - GCP Storage (for comic/report storage)
# =============================================================================

GCP_PROJECT_ID=your_project_id
GCP_STORAGE_BUCKET=your_bucket_name

# Service account JSON path (if using service account auth)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# =============================================================================
# OPTIONAL - App Configuration
# =============================================================================

# URLs (defaults shown)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Logging
LOG_LEVEL=INFO

# Storage mode: "local" for development, "gcs" for production
STORAGE_MODE=local

# Local storage path (only used when STORAGE_MODE=local)
LOCAL_STORAGE_PATH=/data
